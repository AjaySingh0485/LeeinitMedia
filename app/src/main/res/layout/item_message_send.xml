<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/marginPadding10">
    <TextView
        android:id="@+id/textMessage"
        android:fontFamily="@font/scan_regular"
        android:background="@drawable/shape_send_xml"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/viewHeightWidth70"
        android:layout_height="match_parent"
        android:maxLines="3"
        android:maxEms="15"
        android:padding="@dimen/marginPadding17"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/marginPadding5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/marginPadding7" />

    <ImageView
        android:id="@+id/imageMedia"
        android:visibility="gone"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/marginPadding5"
        android:layout_marginEnd="@dimen/marginPadding7"
        android:layout_width="@dimen/viewHeightWidth90"
        android:layout_height="@dimen/viewHeightWidth90"
        android:contentDescription="@string/app_name" />
</androidx.constraintlayout.widget.ConstraintLayout>